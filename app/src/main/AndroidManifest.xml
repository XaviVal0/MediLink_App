<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo_medilink"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_medilink_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MediLink"
        tools:targetApi="31">
        <activity
            android:name=".DetalleVendedor.DetalleVendedor"
            android:exported="false" />
        <activity
            android:name=".Chat.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".RecuperarPassword"
            android:exported="false" />
        <activity
            android:name=".DetalleAnuncio.DetalleAnuncio"
            android:exported="false" />
        <activity
            android:name=".Anuncios.CrearAnuncio"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".EditarPerfil"
            android:exported="false" />
        <activity
            android:name=".Login.registrocorreo"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Login.correologin"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/Api_Google" />
    </application>

</manifest>