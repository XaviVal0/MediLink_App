<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="4dp"
    app:cardUseCompatPadding="true">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="vertical"
android:padding="8dp"
    android:background="@color/white">

<com.google.android.material.imageview.ShapeableImageView
android:id="@+id/imagenIv"
android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginBottom="4dp"
    android:scaleType="centerCrop"
    android:src="@drawable/ic_imagee"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.None" />

<TextView
android:id="@+id/Tv_Titulo"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="4dp"
android:gravity="center"
android:maxLines="2"
android:ellipsize="end"
android:text="@string/Tv_Titulo"
android:textAllCaps="true"
android:textSize="14sp"
android:textStyle="bold"
android:textColor="@color/black" />

<TextView
android:id="@+id/Tv_Estado"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="6dp"
    android:gravity="start"
    android:maxLines="1"
    android:text="Estado producto"
    android:textSize="12sp" />

<com.google.android.material.button.MaterialButton
android:id="@+id/Ib_Button"
android:layout_width="match_parent"
android:layout_height="48dp"
    android:layout_marginTop="4dp"
    android:text="Agregar a Favoritos"
    android:textAllCaps="false"
    android:textColor="@android:color/white"
    android:textSize="12sp"
    android:textStyle="bold"
    app:icon="@drawable/ic_favorite"
    app:iconGravity="textStart"
    app:iconTint="@android:color/white"
    app:backgroundTint="@color/orange" />

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
